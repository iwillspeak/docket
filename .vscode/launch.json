    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb-mi",
            "request": "launch",
            "name": "Debug executable 'docket'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=docket",
                    "--package=docket"
                ],
                "filter": {
                    "name": "docket",
                    "kind": "bin"
                }
            },
            "target": "target/debug/docket",
            "arguments": "-s docs/",
            "cwd": "${workspaceFolder}",
            "valuesFormatting": "parseText"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'docket'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=docket",
                    "--package=docket"
                ],
                "filter": {
                    "name": "docket",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}